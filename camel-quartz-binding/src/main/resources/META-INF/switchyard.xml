<?xml version="1.0" encoding="UTF-8"?>
<switchyard xmlns="urn:switchyard-config:switchyard:1.0"
    xmlns:quartz="urn:switchyard-component-camel-quartz:config:1.0"
    xmlns:bean="urn:switchyard-component-bean:config:1.0">

    <composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
        name="camel-quartz-binding" targetNamespace="urn:switchyard-quickstart:camel-quartz-binding:0.1.0">

        <service name="GreetingService" promote="GreetingService">
            <quartz:binding.quartz>
                <quartz:name>EverySecondJob</quartz:name>
                <quartz:cron>* * * * * ?</quartz:cron>
            </quartz:binding.quartz>
        </service>

    </composite>
</switchyard>
